<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="XamarinJaguarFund.JFHomePage"
		Title = "首页">
	<ScrollView  Orientation = "Vertical" VerticalOptions="StartAndExpand">
		<StackLayout Orientation = "Vertical" VerticalOptions = "StartAndExpand">
			<ListView x:Name = "tradeHistroyListView"
					SeparatorVisibility = "None"
					VerticalOptions = "FillAndExpand"
					HeightRequest = "320"
					ItemSelected = "tradeListViewItemSelected">
				<ListView.Header>
					<StackLayout Orientation = "Horizontal" BackgroundColor = "#FBF8EA">
						<Label Text = "最近交易"
							TextColor = "Black"
							FontSize = "18"
							HorizontalOptions = "StartAndExpand"
							VerticalOptions = "CenterAndExpand"/>

						<Button Text = "更多"
								TextColor = "#dd4b39"
								FontSize = "18"
								Clicked = "tradeMoreBtnClicked"
								HorizontalOptions = "EndAndExpand"
								VerticalOptions = "CenterAndExpand"/>
					</StackLayout>
				</ListView.Header>
				<ListView.RowHeight>
					<OnPlatform x:TypeArguments="x:Int32"
								iOS="90"
								Android="80"
								WinPhone="90" />
				</ListView.RowHeight>
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<ContentView>
								<Frame Padding = "5">
									<StackLayout Orientation = "Vertical">
										<Label Text ="{Binding tradeDataInfo}"
											TextColor = "Black"
											FontSize = "15"
											HorizontalOptions = "StartAndExpand"/>
										
										<StackLayout Orientation = "Horizontal">
											<Label Text = "{Binding unitPriceView, StringFormat='单位净值：{0:S}元'}"
												TextColor = "Gray"
												FontSize = "13"
												HorizontalOptions = "StartAndExpand"/>
											<Label Text = "{Binding tradeAmount, StringFormat='总金额：{0:S}元'}"
												TextColor = "Gray"
												FontSize = "13"
												HorizontalOptions = "EndAndExpand"/>
										</StackLayout>

										<Label Text = "{Binding tradeDate}"
												TextColor = "Gray"
												FontSize = "13"
												HorizontalOptions = "StartAndExpand"/>
									</StackLayout>
								</Frame>
							</ContentView>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>	
			</ListView>



			<ListView x:Name = "netValueHistroyListView"
					SeparatorVisibility = "None"
					VerticalOptions = "FillAndExpand"
					HeightRequest = "215"
					ItemSelected = "netValueHistroyListViewItemSelected">
				<ListView.Header>
					<StackLayout Orientation = "Horizontal" BackgroundColor = "#FBF8EA">
						<Label Text = "净值"
							TextColor = "Black"
							FontSize = "18"
							HorizontalOptions = "StartAndExpand"
							VerticalOptions = "CenterAndExpand"/>

						<Button Text = "更多"
								TextColor = "#dd4b39"
								FontSize = "18"
								Clicked = "netValueMoreBtnClicked"
								HorizontalOptions = "EndAndExpand"
								VerticalOptions = "CenterAndExpand"/>
					</StackLayout>
				</ListView.Header>
				<ListView.RowHeight>
					<OnPlatform x:TypeArguments="x:Int32"
								iOS="55"
								Android="80"
								WinPhone="90" />
				</ListView.RowHeight>
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<ContentView>
								<Frame Padding = "5">
									<StackLayout Orientation = "Horizontal">
										<Label Text = "{Binding productName}"
											TextColor = "Black"
											FontSize = "15"
											HorizontalOptions = "CenterAndExpand"
											VerticalOptions = "CenterAndExpand"
											WidthRequest = "100"/>
										
										<StackLayout Orientation = "Vertical" VerticalOptions = "CenterAndExpand">
											<Label Text = "{Binding latestMarketPrice, StringFormat='单位净值：{0:S}元'}"
												TextColor = "Black"
												FontSize = "13"/>
											<Label Text = "{Binding latestAccumulativeMarketPrice, StringFormat='累计净值：{0:S}元'}"
												TextColor = "Black"
												FontSize = "13"/>
										</StackLayout>

										<Label Text = "{Binding latestMarketDate}"
												TextColor = "Gray"
												FontSize = "12"
												HorizontalOptions = "End"
												VerticalOptions = "CenterAndExpand"/>
									</StackLayout>
								</Frame>
							</ContentView>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>	
			</ListView>


			
			<ListView x:Name = "remindMessageListView"
					SeparatorVisibility = "None"
					VerticalOptions = "Start"
					HeightRequest = "200"
					ItemSelected = "remindMessageListViewItemSelected">
				<ListView.Header>
					<StackLayout Orientation = "Horizontal" BackgroundColor = "#FBF8EA">
						<Label Text = " 事件提醒"
							TextColor = "Black"
							FontSize = "18"
							HorizontalOptions = "StartAndExpand"
							VerticalOptions = "CenterAndExpand"/>

						<Button Text = "更多"
								TextColor = "#dd4b39"
								FontSize = "18"
								Clicked = "remindMessageMoreBtnClicked"
								HorizontalOptions = "EndAndExpand"
								VerticalOptions = "CenterAndExpand"/>
					</StackLayout>
				</ListView.Header>
				<ListView.RowHeight>
					<OnPlatform x:TypeArguments="x:Int32"
								iOS="50"
								Android="80"
								WinPhone="90" />
				</ListView.RowHeight>
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<ContentView>
								<Frame Padding = "5">
									<StackLayout VerticalOptions = "CenterAndExpand">
										<Label Text = "{Binding messageStr}"
											TextColor = "Black"
											FontSize = "18"
											HorizontalOptions = "Start"/>
									</StackLayout>
								</Frame>
							</ContentView>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>	
			</ListView>
		</StackLayout>
	</ScrollView>
</ContentPage>