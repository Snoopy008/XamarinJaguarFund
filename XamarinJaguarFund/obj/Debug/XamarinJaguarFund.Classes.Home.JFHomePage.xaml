										<Label Text = "1234"
												TextColor = "Black"
												FontSize = "18"
												HorizontalOptions = "End"/>
									</StackLayout>
								</Frame>
							</ContentView>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>	
			</ListView>



